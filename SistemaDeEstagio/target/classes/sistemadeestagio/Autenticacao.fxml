<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootBox" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistemadeestagio.autenticacaoController">
   <children>
      <Label text="Sistema de Estagio">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <TextField fx:id="usuarioLabel" maxWidth="400.0" promptText="Usuario" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets top="60.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="senhaLabel" maxWidth="400.0" promptText="Senha">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </PasswordField>
      <HBox fillHeight="false" snapToPixel="false" style="-fx-alignment: center;">
         <children>
            <Button fx:id="entrarButton" alignment="CENTER" mnemonicParsing="false" onAction="#checarLogin" style="-fx-alignment: center;" text="Entrar">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="cadastrarButton" alignment="CENTER" mnemonicParsing="false" onAction="#irCadastro" text="Cadastrar">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
