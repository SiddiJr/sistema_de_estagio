<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootBox" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistemadeestagio.CadastroController">
    <children>
        <Label text="Sistema de Estagio">
            <font>
                <Font size="24.0" />
            </font>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </Label>
      <TextField fx:id="nomeCampo" maxWidth="400.0" promptText="Nome Completo">
         <VBox.margin>
            <Insets top="60.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="emailCampo" maxWidth="400.0" promptText="E-Mail">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </TextField>
        <TextField fx:id="usuarioCampo" maxWidth="400.0" promptText="Usuario" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </TextField>
        <PasswordField fx:id="senhaCampo" maxWidth="400.0" promptText="Senha">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </PasswordField>
        <Button fx:id="cadastrarButton" mnemonicParsing="false" onAction="#cadastrar" text="Cadastrar">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
